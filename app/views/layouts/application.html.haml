!!!
%html
  %head
    %title TimeGlitch
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #header
      - if signed_in?
        %img{ :src => current_user.avatar_url }
        %p
          Hello, #{current_user.player_name}. Need to
          - succeed '?' do
            = link_to 'sign out', sign_out_path
      - else
        %p
          Who are you? Please
          = link_to 'sign in with Glitch', sign_in_path
    = yield
